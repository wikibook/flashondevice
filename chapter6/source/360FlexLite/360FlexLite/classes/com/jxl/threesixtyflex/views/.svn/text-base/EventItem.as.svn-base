import com.jxl.shuriken.core.UIComponent;import com.jxl.shuriken.utils.DateUtils;import com.jxl.threesixtyflex.vo.EventVO;class com.jxl.threesixtyflex.views.EventItem extends UIComponent{	public static var SYMBOL_NAME:String = "com.jxl.threesixtyflex.views.EventItem";		private var __time_txt:TextField;	private var __event_txt:TextField;	private var __speaker_txt:TextField;		public function EventItem()	{	}		private function createChildren():Void	{		super.createChildren();				if(__time_txt == null)		{			__time_txt = createLabel("__time_txt");			__time_txt.autoSize = "left";			var tTF:TextFormat = __time_txt.getTextFormat();			tTF.font = "Verdana";			tTF.size = 11;			tTF.color = 0x009900;			tTF.bold = true;			//__time_txt.border = true;			//__time_txt.borderColor = 0x0000CC;			__time_txt.setNewTextFormat(tTF);		}				if(__event_txt == null)		{			__event_txt = createLabel("__event_txt");			__event_txt.autoSize = "left";			__event_txt.embedFonts = true;			__event_txt.setNewTextFormat(_global.pixelBoldTF);		}				if(__speaker_txt == null)		{			__speaker_txt = createLabel("__speaker_txt");			__speaker_txt.autoSize = "left";			__speaker_txt.embedFonts = true;			__speaker_txt.setNewTextFormat(_global.pixelTF);		}	}			private function redraw():Void	{		super.redraw();		//		__time_txt.setSize(__time_txt.textWidth + 4, __time_txt.textHeight + 4);//		__time_txt.move(0, 0);//		//		__event_txt.setSize(__event_txt.textWidth, __event_txt.textHeight + 4);//		__event_txt.move(0, __time_txt._y + __time_txt._height);//		//		__speaker_txt.setSize(__speaker_txt.textWidth, __speaker_txt.textHeight);//		__speaker_txt.move(0, __event_txt._y + __event_txt._height);		__time_txt.move(0, 0);				__event_txt.move(0, 12);				__speaker_txt.move(0, 22);				//clear();//		lineStyle(2, 0x00CC00);//		beginFill(0xCC0000, 50);//		lineTo(__width, 0);//		lineTo(__width, __height);//		lineTo(0, __height);//		endFill();			}		public function setEvent(vo:EventVO):Void	{		if(vo != null)		{			__time_txt.text = DateUtils.format(vo.startTime, DateUtils.HOUR_MIN_AM_PM) + " - " + DateUtils.format(vo.endTime, DateUtils.HOUR_MIN_AM_PM);			__event_txt.text = vo.name;			__speaker_txt.text = vo.speaker;			//__time_txt.text = "time";			//__event_txt.text = "event";			//__speaker_txt.text = "speaker";			invalidate();		}		else		{			__time_txt.text = "";			__event_txt.text = "";			__speaker_txt.text = "";		}	}}
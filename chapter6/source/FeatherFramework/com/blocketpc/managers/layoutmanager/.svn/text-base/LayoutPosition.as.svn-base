/**
 * This class stores the different values for the Layers and Items positions.
 * 
 * @author Marcos
 * @version 1.0
 * 
 * @see LayoutManager
 * @see LayoutLayer
 * @see LayoutItem
 * @see LayoutOrientation
 * @see LayoutType
 * 
 */
class com.blocketpc.managers.layoutmanager.LayoutPosition
{
	/**
	 * Top Left alignment
	 */
	static public var TL:String = "TL";
	
	/**
	 * Top Center alignment
	 */
	static public var TC:String = "TC";
	
	/**
	 * Top Right alignment
	 */
	static public var TR:String = "TR";
	
	/**
	 * Middle Left alignment
	 */
	static public var ML:String = "ML";
	
	/**
	 * Middle Center alignment
	 */
	static public var MC:String = "MC";
	
	/**
	 * Middle Right alignment
	 */
	static public var MR:String = "MR";
	
	/**
	 * Bottom Left alignment
	 */
	static public var BL:String = "BL";
	
	/**
	 * Bottom Center alignment
	 */
	static public var BC:String = "BC";
	
	/**
	 * Botom Right alignment
	 */
	static public var BR:String = "BR";
	
	/**
	 * Left softKey alignment, this is a special alignment for mobile softkeys
	 */
	static public var SOFT1:String = "SOFT1";
	
	/**
	 * Right sofKey alignment, this is a special alignment for mobile softkeys
	 */	static public var SOFT2:String = "SOFT2";
}
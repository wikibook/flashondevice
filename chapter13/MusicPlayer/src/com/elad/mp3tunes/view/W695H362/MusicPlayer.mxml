	<mx:Button id="artistsButton" buttonMode="true" styleName="artistsButton" x="392" y="138"/>
	<mx:Button id="albumsButton" buttonMode="true" styleName="albumsButton" x="547" y="138"/>
	<mx:Button id="playButton" buttonMode="true" styleName="playButton" x="68" y="134"/>
	<mx:Button id="pauseButton" buttonMode="true" styleName="pauseButton" x="68" y="134"/>
		

			width="525" height="7"
			minimum="0" maximum="100" 
			labelWidth="0"
			direction="right" mode="manual" />
	
		<mx:ProgressBar id="trackProgressBar"
			styleName="trackProgressBarSkin"
			x="78" y="60" 
			width="525" height="12"
